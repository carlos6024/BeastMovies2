<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/activity_main_layout_picture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        >

        <ImageView
            android:id="@+id/activity_main_moviePicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ProgressBar
            android:id="@+id/activity_main_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/activity_main_layout_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/activity_main_layout_picture"
        android:layout_toRightOf="@+id/activity_main_layout_picture"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/activity_main_movieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Title"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/activity_main_movieReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/3/2016"
            />

        <TextView
            android:id="@+id/activity_main_movie_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_main_layout_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_layout_picture"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summary:"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/activity_main_movie_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THis is the movies summary"
            android:textSize="14sp"
            />


    </LinearLayout>


    <ImageView
        android:id="@+id/activity_main_left_arrow"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/arrow_background"
        android:src="@mipmap/left_arrow"
        />

    <ImageView
        android:id="@+id/activity_main_right_arrow"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/arrow_background"
        android:src="@mipmap/right_arrow"

        />
</RelativeLayout>
